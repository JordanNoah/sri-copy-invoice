PORT=3000
NODE_ENV=development | production | test

# Database
DB_HOST=localhost
DB_USERNAME=root
DB_PASSWORD=1234
DB_PORT=3306
DB_NAME=invoice_reciver_copy

# Encryption (para credenciales de empresas)
# Debe ser una clave de al menos 32 caracteres
ENCRYPTION_KEY=your-super-secret-encryption-key-here-32chars-minimum!!

# ==================== SRI AUTOMATION - CREDENCIALES ====================
SRI_RUC=1234567890001
SRI_PASSWORD=tu_contraseña_sri

AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=your-aws-region
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# ==================== EMAIL NOTIFICATIONS (SOLO ERRORES) ====================
# Sistema de alertas por email - Solo se envían cuando hay ERRORES
# NO se envían notificaciones de éxito para evitar spam
EMAIL_SERVICE=gmail  # Opciones: gmail, smtp, ses
EMAIL_HOST=smtp.gmail.com  # Solo para SMTP genérico
EMAIL_PORT=587  # Solo para SMTP genérico
EMAIL_SECURE=false  # true para puerto 465, false para otros
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password  # Para Gmail: genera App Password en https://myaccount.google.com/apppasswords
EMAIL_FROM=SRI Invoice System <noreply@yourdomain.com>
EMAIL_ALERTS_TO=admin@yourdomain.com,dev@yourdomain.com  # Lista separada por comas
