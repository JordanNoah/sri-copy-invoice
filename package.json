    "hono": "^4.9.1",
    "module-alias": "^2.2.3",
    "mysql2": "^3.14.3",
    "node-cron": "^4.2.1",
    "sequelize": "^6.37.7"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^24.2.1",
    "@types/node-cron": "^3.0.11",
